<h1>All Chats</h1>

<% if can? :create, Chat %>
  <%= link_to "Add New Chat", new_chat_path, class: "btn btn-success mb-3" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th></th> <!-- Show -->
      <th></th> <!-- Edit -->
      <th></th> <!-- Delete -->
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.sender.email %></td>
        <td><%= c.receiver.email %></td>
        <td>
          <%= link_to "Show", chat_path(c), class: "btn btn-outline-primary btn-sm" %>
        </td>
        <td>
          <% if can? :update, c %>
            <%= link_to "Edit", edit_chat_path(c), class: "btn btn-outline-secondary btn-sm" %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, c %>
            <%= link_to "Delete", chat_path(c),
                        method: :delete,
                        data: { confirm: "Really delete this chat?" },
                        class: "btn btn-outline-danger btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
