<h1>All Chats</h1>

<%= link_to "Add New Chat", new_chat_path, class: "btn btn-success mb-3" %>


<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Sender ID</th>
      <th>Receiver ID</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td><%= chat.created_at %></td>
        <td><%= chat.updated_at %></td>
        <td><%= link_to "Show", chat_path(chat) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
